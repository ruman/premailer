{
    "name": "luminaire/premailer",
    "description": "The \"Luminaire Premailer\" is a fork of the \"Crossjoin PreMailer\" by Christoph Ziegenberg, this fork will make integration to Laravel based project easier.",
    "keywords": ["premailer", "e-mail", "mail", "inline", "css", "styles", "html", "text", "php"],
    "homepage": "https://github.com/luminaire/premailer",
    "license": "MIT",
    "authors": [
        {
            "name": "Christoph Ziegenberg",
            "email": "ziegenberg@crossjoin.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/luminaire/premailer/issues",
        "source": "https://github.com/luminaire/premailer"
    },
    "require": {
        "php":                  ">=5.4.0",
        "ext-dom":              "*",
        "ext-mbstring" :        "*",
        "crossjoin/css":        "^1.0.3",
        "symfony/css-selector": "2.8.*|3.0.*"
    },
    "require-dev": {
        "phpunit/phpunit":      "~4.0",
        "phpspec/phpspec":      "^2.5"
    },
    "autoload": {
        "psr-4": {
            "Luminaire\\Premailer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luminaire\\Premailer\\Stub\\": "stubs/"
        }
    }
}
